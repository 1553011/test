<form id="signupForm" method="post" action="/users/register">
    <div class="login-wrapper">
        <div class="box">
            <div class="content-wrap">
                <h2>Don't have an account? Create one now!</h2>
                <div class="row">
                    <div class="col">
                        <label for="sign_up_name">Name</label>
                        <input class="form-control" type="text" placeholder="Name" id="sign_up_name" name="name">
                        <label for="sign_up_phone">Phone</label>
                        <input class="form-control" type="text" placeholder="Phone" id="sign_up_phone" name="phone">
                        <label for="sign_up_address">Address</label>
                        <input class="form-control" type="text" placeholder="Address" id="sign_up_address" name="address">


                    </div>
                    <div class="col">
                        <label for="sign_up_email">Email</label>
                        <input class="form-control" type="text" placeholder="E-mail address" id="sign_up_email" name="email">
                        <label for="sign_up_psw">Password</label>
                        <input class="form-control" type="password" placeholder="Password" id="sign_up_psw" name="password">
                        <label for="sign_up_confirmed_psw">Confirm password</label>
                        <input class="form-control" type="password" placeholder="Confirm Password" id="sign_up_confirmed_psw" name="cfm_pwd">
                    </div>
                </div>
                
                <input type="hidden"  name="_csrf" value="{{crsfToken}}">
                <div class="g-recaptcha" data-sitekey="6LdnrVYUAAAAACYv9MUpOQyJ-GYMYreJWY69NLjN"></div>
                <div class="action">
                    <button type="submit" class="btn btn_log" id="btn-signup">Sign Up</button>
                </div>
            </div>
        </div>
    </div>
    </div>
</div>
</form>


