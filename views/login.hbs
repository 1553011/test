{{#if error_message}}
    <div class="alert alert-danger">
        <strong>Danger! </strong>{{error_message}}
    </div>  
{{/if}}

{{#if success_message}}
    <div class="alert alert-success">
        <strong>Success! </strong> {{success_message}}
    </div> 
{{/if}}

 {{#if errors}}
   <div class="alert alert-success">
        <strong>Success! </strong>  {{errors}}
    </div> 
{{/if}}

