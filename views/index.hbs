<!--Album -->
<a name="album"></a>
<h2 class="heading">SELECT YOUR SHIRT</h2>

<div class="album py-5">
    <div class="container">
        <div class="row">
            {{#each shirts}}
            <div class="col-md-3" data-id="{{id}}">
                <div class="card mb-3 box-shadow">
                    <img class="card-img-top img-thumbnail" src="{{image}}" style="height:250px;" alt="Card image cap">
                    <div class="btn-group">
                        <button type="button" class="btn btn-md btn-outline-primary popup" 
                        data-toggle="modal" data-target="#myModal" style="color:#08588c;border-color:#08588c;">View</button>
                        <button type="button" class="btn btn-md btn-outline-primary btn-link"style="color:#08588c;border-color:#08588c;">Edit</button>
                    </div>
                    <div class="card-body">
                        <h5>{{name}}</h5>
                        <p class="tag">{{price}} VNĐ</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>
